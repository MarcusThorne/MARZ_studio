      <div class="arts-cards">
        <% @arts.each do |art| %>
          <%= link_to art_path(art) do %>
            <div class="art-card">
              <% if art.photo.attached? %>
                <%= cl_image_tag art.photo.key,height: 300, width: 250, crop: :fill, id:"photo" %>
              <% end %>
             
              <div class="art-card-price">
                £<%= art.price %>
              </div>

              <div class="card-content" style="display:flex; justify-content:space-between;">
                <div class="content">
                  <h5 style="font-weight:bolder;"><%= art.name %></h5>
                  <div class="line"></div>
                  <p style="margin-top: 8px; "><i class="fas fa-palette"></i> <%= art.artist %></p>
                </div>
              </div>
            </div>
